{
	"overrides": [
		{
			"files": [ "**/*.ts", "**/*.js", "**/*.mjs" ],
			"extends": [
				"wikimedia/common",
				"wikimedia/node"
			],
			"rules": {
				"strict": "off",
				"security/detect-non-literal-fs-filename": "off"
			}
		},
		{
			"files": [ "**/*.ts", "**/*.vue" ],
			"rules": {
				"no-unused-vars": "off",
				"@typescript-eslint/no-unused-vars": "error",
				"es-x/no-optional-chaining": "off",
				"es-x/no-rest-spread-properties": "off",
				"es-x/no-nullish-coalescing-operators": "off",
				"es-x/no-async-functions": "off",
				"es-x/no-class-fields": "off",
				"es-x/no-array-prototype-flat": "off",
				"jsdoc/require-param-type": "off",
				"jsdoc/require-returns-type": "off",
				"n/no-missing-import": "off",
				"comma-dangle": "off",
				"@stylistic/indent": "off",
				"@stylistic/member-delimiter-style": "off",
				"@stylistic/type-annotation-spacing": "off",
				"@typescript-eslint/explicit-member-accessibility": "off"
			}
		},
		{
			"files": [ "**/*.js", "**/*.mjs" ],
			"rules": {
				"jsdoc/valid-types": "off",
				"jsdoc/no-undefined-types": "off",
				"jsdoc/check-tag-names": [
					"error",
					{
						"definedTags": [ "import" ]
					}
				]
			}
		},
		{
			"files": [
				"component-demos/**/examples/*.vue",
				"component-demos/**/examples-mw/*.vue"
			],
			"extends": [
				"wikimedia/language/es2017"
			],
			"rules": {
				"vue/block-lang": [ "error", {
					"script": { "lang": "js" }
				} ],
				"vue/no-undef-components": [ "error", {
					"ignorePatterns": [
						"client-only",
						"ClientOnly"
					]
				} ]
			}
		},
		{
			"files": [ "component-demos/**/examples-mw/*.vue" ],
			"globals": {
				"require": "readonly",
				"module": "readonly"
			},
			"rules": {
				"vue/html-self-closing": [ "error", {
					"html": {
						"void": "never",
						"normal": "never",
						"component": "never"
					}
				} ],
				"vue/no-unused-properties": "off",
				"max-len": "off"
			}
		}
	],
	"ignorePatterns": [
		"src/env.d.ts",
		"dist/*",
		"docs/.vitepress/cache/**/*"
	]
}
